{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Path */
    "paths": {
      "@pages/*": [
        "./src/pages/*"
      ],
      "@components": [
        "./src/components/index"
      ],
      "@utils/*": [
        "./src/libs/utils/*"
      ],
      "@stores/*": [
        "./src/libs/stores/*"
      ],
      "@hooks": [
        "./src/libs/hooks/index"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@validations/*": [
        "./src/validations/*"
      ],
      "__mocks__/*":[
        "./__mocks__/*"
      ]
    },
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "typeRoots": [
      "./node_modules/@types",
      "./src/vite-env.d.ts",
      "./src/types/**"
    ],
  },
  "include": [
    "src",
    "__mocks__",
    "__tests__"
  ],
  "references": [
    {
      "path": "./tsconfig.node.json"
    }
  ]
}